---
/**
 * Header Component
 *
 * Main navigation header with dark theme support.
 * Uses theme-aware components for consistent styling.
 */
import Button from './theme/Button.astro';
import NavLink from './theme/NavLink.astro';
---

<header class="bg-bg-secondary border-b border-border-primary sticky top-0 z-50 backdrop-blur-sm bg-bg-secondary/95">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <a href="/" class="text-xl font-bold text-text-primary hover:text-accent-emerald transition-colors">
          nocodo
        </a>
      </div>

      <!-- Navigation Links -->
      <nav class="hidden md:flex items-center space-x-2">
        <NavLink href="/">
          Home
        </NavLink>
        <NavLink href="/playbook">
          Playbook
        </NavLink>
        <NavLink href="/blog">
          Blog
        </NavLink>
        <Button
          href="/events"
          variant="accent-emerald"
          size="sm"
        >
          Events
        </Button>
      </nav>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="text-text-secondary hover:text-text-primary focus:outline-none focus:ring-2 focus:ring-accent-emerald rounded-md p-2 transition-colors"
          id="mobile-menu-button"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <span class="sr-only">Open main menu</span>
          <!-- Hamburger icon -->
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu (hidden by default) -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 border-t border-border-primary">
        <NavLink href="/" class="block">
          Home
        </NavLink>
        <NavLink href="/playbook" class="block">
          Playbook
        </NavLink>
        <NavLink href="/blog" class="block">
          Blog
        </NavLink>
        <div class="px-3 py-2">
          <Button
            href="/events"
            variant="accent-emerald"
            size="sm"
            class="w-full"
          >
            Events
          </Button>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        
        // Toggle menu visibility
        mobileMenu.classList.toggle('hidden');
        
        // Update aria-expanded
        mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
      });
    }
  });
</script>