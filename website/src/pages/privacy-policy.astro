---
import PolicyLayout from '../layouts/PolicyLayout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('about', 'privacy-policy');
if (!entry) throw new Error('Privacy policy content not found');
const { Content } = await entry.render();
---

<PolicyLayout 
  title="Privacy Policy" 
  description="Privacy policy for nocodo - Local AI-assisted development environment"
>
  <Content />
</PolicyLayout>