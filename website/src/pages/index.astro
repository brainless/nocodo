---
import Layout from "../layouts/Layout.astro";
import Section from "../components/theme/Section.astro";
import SectionHeader from "../components/theme/SectionHeader.astro";
import Card from "../components/theme/Card.astro";
import FeatureCard from "../components/theme/FeatureCard.astro";
import heroScreenshot from "../assets/nocodo_Analysing_Own_Code.png";
import connectionScreenshot from "../assets/nocodo_Connection_Screen_Local_Remote_SSH_Options.png";
import lanConnectScreenshot from "../assets/nocodo_Connect_Remote_Within_LAN.png";
---

<Layout
    title="nocodo - Agentic Platform for Business Automation"
    description="Batteries-included agentic platform to build custom agents from idea to deployment. Automate sales, competitive intelligence, data collection, and more."
>
    <!-- Hero Section -->
    <section
        class="relative overflow-hidden bg-gradient-to-b from-bg-primary via-bg-secondary to-bg-primary text-text-primary"
    >
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
            <svg
                class="absolute inset-0 h-full w-full"
                xmlns="http://www.w3.org/2000/svg"
            >
                <defs>
                    <pattern
                        id="grid"
                        width="32"
                        height="32"
                        patternUnits="userSpaceOnUse"
                    >
                        <path
                            d="M0 32V0h32"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1"></path>
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#grid)"></rect>
            </svg>
        </div>

        <div
            class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32"
        >
            <div class="text-center">
                <!-- Logo/Brand -->
                <h1
                    class="text-6xl sm:text-7xl lg:text-8xl font-bold mb-8 bg-gradient-to-r from-accent-emerald to-accent-cyan bg-clip-text text-transparent"
                >
                    nocodo
                </h1>

                <!-- Tagline -->
                <p
                    class="text-2xl sm:text-3xl lg:text-4xl text-text-secondary max-w-4xl mx-auto mb-6 leading-tight font-light"
                >
                    Batteries-included agentic platform
                </p>

                <p
                    class="text-lg sm:text-xl text-text-tertiary max-w-3xl mx-auto mb-12"
                >
                    From idea to hosted agents in minutes
                </p>

                <!-- CTA -->
                <div
                    class="flex flex-col sm:flex-row gap-4 justify-center items-center"
                >
                    <a
                        href="https://github.com/brainless/nocodo"
                        class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-emerald-500 to-cyan-500 hover:from-emerald-600 hover:to-cyan-600 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-200"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <svg
                            class="mr-3 w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                        Star on GitHub
                    </a>
                </div>

                <p class="text-sm text-text-muted mt-8">
                    Under active development • Star and watch for updates
                </p>
            </div>
        </div>
    </section>

    <!-- Hero Screenshot -->
    <Section background="primary" paddingY="sm">
        <div class="relative">
            <img
                src={heroScreenshot.src}
                alt="nocodo Desktop app connected over SSH, showing past prompts"
                title="Desktop app showing past prompts, current prompt, on connected manager instance"
                class="w-full rounded-lg shadow-2xl border border-border-primary"
            />
        </div>
        <div class="mt-4 text-center">
            <p class="text-sm text-text-muted">
                ⚠️ Under active development - the desktop app shows tool call
                outputs as raw JSON, a better UI will come soon
            </p>
        </div>
    </Section>

    <!-- Business Value Proposition -->
    <Section background="secondary" containerWidth="5xl">
        <SectionHeader title="Transform Your Business with AI Agents" />

        <Card class="p-8 sm:p-12">
            <p
                class="text-xl sm:text-2xl text-text-secondary leading-relaxed mb-6"
            >
                Building custom automation shouldn't require months of development.
            </p>
            <p class="text-lg sm:text-xl text-text-secondary leading-relaxed">
                Define your business requirements, and nocodo automatically discovers the integrations you need, generates the glue code, and deploys a self-hosted agent solution that works for your specific business context.
            </p>
        </Card>
    </Section>

    <!-- Platform Capabilities -->
    <Section background="primary">
        <SectionHeader
            title="The nocodo Platform"
            subtitle="Complete agentic platform for business automation"
        />

        <div class="grid lg:grid-cols-2 gap-8">
            <!-- Agent Builder -->
            <Card
                variant="gradient"
                class="hover:border-accent-emerald/50 transition-all duration-300"
            >
                <div class="flex items-center mb-6">
                    <div
                        class="w-12 h-12 bg-accent-emerald/10 rounded-lg flex items-center justify-center mr-4"
                    >
                        <svg
                            class="w-6 h-6 text-accent-emerald"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-text-primary">
                        AI-Powered Agent Builder
                    </h3>
                </div>
                <p class="text-text-secondary mb-6 leading-relaxed">
                    Define business intent, let AI discover integrations and generate solutions
                </p>
                <ul class="space-y-3 text-text-secondary">
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Business requirement analysis</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Automatic integration discovery</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Glue code generation</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Deterministic agent deployment</span>
                    </li>
                </ul>
            </Card>

            <!-- Integration Hub -->
            <Card
                variant="gradient"
                class="hover:border-accent-cyan/50 transition-all duration-300"
            >
                <div class="flex items-center mb-6">
                    <div
                        class="w-12 h-12 bg-accent-cyan/10 rounded-lg flex items-center justify-center mr-4"
                    >
                        <svg
                            class="w-6 h-6 text-accent-cyan"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 10V3L4 14h7v7l9-11h-7z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-text-primary">
                        Universal Integration Hub
                    </h3>
                </div>
                <p class="text-text-secondary mb-6 leading-relaxed">
                    Connect to any service, database, or API with pre-built integrations
                </p>
                <ul class="space-y-3 text-text-secondary">
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-cyan mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Email providers (Gmail, Outlook)</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-cyan mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Databases and form data</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-cyan mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Communication platforms</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-cyan mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Custom API connections</span>
                    </li>
                </ul>
            </Card>
        </div>

        <!-- Connection Screenshots -->
        <div class="mt-12 space-y-8">
            <div class="relative">
                <img
                    src={connectionScreenshot.src}
                    alt="nocodo Desktop app showing connection screen - can connect to nocodo manager running locally or remote over SSH"
                    title="Connect to nocodo manager running locally or remote over SSH"
                    class="w-full rounded-lg border border-border-primary shadow-2xl"
                />
            </div>
            <div class="relative">
                <img
                    src={lanConnectScreenshot.src}
                    alt="nocodo Desktop app, connecting to my other computer in LAN over SSH"
                    title="Connecting to my other computer in LAN over SSH"
                    class="w-full rounded-lg border border-border-primary shadow-2xl"
                />
            </div>
        </div>

        <div class="mt-12 text-center">
            <p class="text-text-tertiary text-lg">Mobile apps coming soon</p>
        </div>
    </Section>

    <!-- Business Process Flow -->
    <Section background="secondary">
        <SectionHeader title="From Idea to Agent in Minutes" />

        <div class="space-y-8">
            <!-- Step 1 -->
            <Card class="p-8">
                <div class="flex items-start">
                    <div
                        class="w-10 h-10 bg-emerald-500 text-white rounded-lg flex items-center justify-center mr-6 flex-shrink-0 font-bold text-lg"
                    >
                        1
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-text-primary mb-3">
                            Define Your Business Intent
                        </h3>
                        <p class="text-text-secondary leading-relaxed">
                            Describe what you want to achieve in plain language - analyze customer interactions, track competitors, automate data collection, or any business process you need streamlined.
                        </p>
                    </div>
                </div>
            </Card>

            <!-- Step 2 -->
            <Card class="p-8">
                <div class="flex items-start">
                    <div
                        class="w-10 h-10 bg-emerald-500 text-white rounded-lg flex items-center justify-center mr-6 flex-shrink-0 font-bold text-lg"
                    >
                        2
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-text-primary mb-3">
                            AI Discovers Required Integrations
                        </h3>
                        <p class="text-text-secondary leading-relaxed">
                            The AI-powered discovery system asks targeted questions to understand your needs and automatically identifies the services, APIs, and data sources required for your custom agent.
                        </p>
                    </div>
                </div>
            </Card>

            <!-- Step 3 -->
            <Card class="p-8">
                <div class="flex items-start">
                    <div
                        class="w-10 h-10 bg-emerald-500 text-white rounded-lg flex items-center justify-center mr-6 flex-shrink-0 font-bold text-lg"
                    >
                        3
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-text-primary mb-3">
                            Agent Generated and Deployed
                        </h3>
                        <p class="text-text-secondary leading-relaxed">
                            Using nocodo's extensive library of pre-built components, the platform generates all necessary glue code and deploys a deterministic, self-hosted agent that works for your specific business context.
                        </p>
                    </div>
                </div>
            </Card>
        </div>
    </Section>

    <!-- Business Use Cases -->
    <Section background="primary">
        <SectionHeader 
            title="Business Solutions"
            subtitle="Transform your operations with custom AI agents"
        />

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Sales Team Assistance -->
            <Card class="p-6 hover:border-accent-emerald/50 transition-all duration-300">
                <div class="flex items-center mb-4">
                    <div class="w-10 h-10 bg-accent-emerald/10 rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-5 h-5 text-accent-emerald" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-bold text-text-primary">Sales Team Assistance</h3>
                </div>
                <p class="text-text-tertiary mb-4">
                    Analyze all client interactions and prospective clients using AI to identify opportunities and optimize sales strategies.
                </p>
                <ul class="text-sm text-text-muted space-y-1">
                    <li>• Customer interaction analysis</li>
                    <li>• Lead scoring and prioritization</li>
                    <li>• Sales pattern recognition</li>
                </ul>
            </Card>

            <!-- Competitive Intelligence -->
            <Card class="p-6 hover:border-accent-cyan/50 transition-all duration-300">
                <div class="flex items-center mb-4">
                    <div class="w-10 h-10 bg-accent-cyan/10 rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-5 h-5 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-bold text-text-primary">Competitive Intelligence</h3>
                </div>
                <p class="text-text-tertiary mb-4">
                    Given potential customers, automatically find and analyze their competitors to provide strategic insights.
                </p>
                <ul class="text-sm text-text-muted space-y-1">
                    <li>• Competitor discovery</li>
                    <li>• Market positioning analysis</li>
                    <li>• Competitive advantage identification</li>
                </ul>
            </Card>

            <!-- Data Collection & Analysis -->
            <Card class="p-6 hover:border-accent-purple/50 transition-all duration-300">
                <div class="flex items-center mb-4">
                    <div class="w-10 h-10 bg-accent-purple/10 rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-5 h-5 text-accent-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v1a1 1 0 001 1h4a1 1 0 001-1v-1m3-2V8a2 2 0 00-2-2H8a2 2 0 00-2 2v7m3-2h6"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-bold text-text-primary">Data Collection & Analysis</h3>
                </div>
                <p class="text-text-tertiary mb-4">
                    Crawl and collect data from various sources for business insights and automated reporting.
                </p>
                <ul class="text-sm text-text-muted space-y-1">
                    <li>• Multi-source data aggregation</li>
                    <li>• Automated report generation</li>
                    <li>• Real-time data monitoring</li>
                </ul>
            </Card>
        </div>
    </Section>

    <!-- Integration Capabilities -->
    <Section background="secondary">
        <SectionHeader title="Integration Capabilities" />

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <Card class="p-6">
                <h3 class="text-lg font-bold text-text-primary mb-2">
                    Email Integration
                </h3>
                <p class="text-text-tertiary">
                    Connect Gmail, Outlook, and other email providers for automated communication analysis
                </p>
            </Card>

            <Card class="p-6">
                <h3 class="text-lg font-bold text-text-primary mb-2">
                    Database Connectivity
                </h3>
                <p class="text-text-tertiary">
                    Direct integration with your databases and form data for comprehensive insights
                </p>
            </Card>

            <Card class="p-6">
                <h3 class="text-lg font-bold text-text-primary mb-2">
                    API Connections
                </h3>
                <p class="text-text-tertiary">
                    Connect to any external service or API with pre-built authentication and data handling
                </p>
            </Card>

            <Card class="p-6">
                <h3 class="text-lg font-bold text-text-primary mb-2">
                    Communication Platforms
                </h3>
                <p class="text-text-tertiary">
                    Integrate with Telegram, WhatsApp, Slack for automated notifications and responses
                </p>
            </Card>

            <Card class="p-6">
                <h3 class="text-lg font-bold text-text-primary mb-2">
                    Dashboard Generation
                </h3>
                <p class="text-text-tertiary">
                    Automatically create dashboards and reports from collected data and analysis
                </p>
            </Card>

            <Card class="p-6">
                <h3 class="text-lg font-bold text-text-primary mb-2">
                    Custom Integrations
                </h3>
                <p class="text-text-tertiary">
                    Build custom connections to any service with our extensible integration framework
                </p>
            </Card>
        </div>
    </Section>

    <!-- Platform Roadmap -->
    <Section background="secondary">
        <SectionHeader
            title="Platform Evolution"
            subtitle="The future of business automation with nocodo"
        />

        <div class="grid md:grid-cols-2 gap-8">
            <!-- Near-term -->
            <Card class="p-8">
                <h3 class="text-2xl font-bold text-text-primary mb-6">
                    Coming Soon
                </h3>
                <ul class="space-y-4 text-text-secondary">
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                        <span>Advanced agent orchestration</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                        <span>Multi-agent collaboration</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                        <span>Real-time agent monitoring</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                        <span>Enterprise-grade security features</span>
                    </li>
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-accent-emerald mr-3 mt-0.5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                        <span>Advanced analytics and reporting</span>
                    </li>
                </ul>
            </Card>

