---
import Layout from '../layouts/Layout.astro';
import Button from '../components/UI/Button.astro';
import Card from '../components/UI/Card.astro';

const solutionPoints = [
  {
    title: "Free AI Coding Agents",
    description: "Uses Claude Code, OpenAI Codex, Gemini or similar - use free tiers automatically!",
    icon: "ü§ñ",
    color: "blue"
  },
  {
    title: "Your Cloud Infrastructure",
    description: "Your development setup is managed by nocodo on your cloud infra",
    icon: "‚òÅÔ∏è",
    color: "purple"
  },
  {
    title: "No Lock-in",
    description: "Your API keys for coding agents and cloud infra (DigitalOcean, Scaleway, CloudFlare) - no lock-in!",
    icon: "üîì",
    color: "green"
  },
  {
    title: "Idea to Live App",
    description: "Takes your idea (voice notes or written text) to live full-stack app on your domain",
    icon: "üöÄ",
    color: "orange"
  },
  {
    title: "GitHub Integration",
    description: "Uses your GitHub account to setup a project, tickets, automation, tests",
    icon: "üì±",
    color: "indigo"
  },
  {
    title: "Unlimited Changes",
    description: "Unlimited change requests - use your API credits or subscriptions",
    icon: "‚ôæÔ∏è",
    color: "red"
  }
];
---

<Layout 
  title="nocodo - A platform that takes you from idea to live full-stack MVP (no lock-in)" 
  description="nocodo is a platform that takes you from idea to live full-stack MVP with no lock-in. Use free AI coding agents, your cloud infrastructure, and unlimited change requests."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-purple-50">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="absolute inset-0 h-full w-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="32" height="32" patternUnits="userSpaceOnUse">
            <path d="M0 32V0h32" fill="none" stroke="currentColor" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)"/>
      </svg>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="text-center">
        <!-- Main Branding -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-gray-900 mb-6">
          <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent">
            nocodo
          </span>
        </h1>
        
        <!-- Tagline -->
        <p class="text-xl sm:text-2xl text-gray-600 max-w-4xl mx-auto mb-8 leading-relaxed">
          A platform that takes you from idea to live full-stack MVP 
          <strong class="text-gray-900">(no lock-in)</strong>
        </p>
        
        <!-- Call to Action -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
          <Button 
            href="/playbook"
            variant="primary"
            size="lg"
          >
            Get Started
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
          <Button 
            href="/fundamentals"
            variant="secondary"
            size="lg"
          >
            Learn Fundamentals
          </Button>
        </div>
        
        <!-- Product Screenshot -->
        <div class="max-w-5xl mx-auto">
          <div class="relative">
            <img 
              src="/src/assets/nocodo_AI_Session_Details_Redesigned_26_August_2025.png" 
              alt="nocodo AI Session Details - Live output from AI coding session showing project analysis and development workflow"
              class="w-full rounded-lg shadow-2xl border border-gray-200"
            />
            <!-- Optional overlay for better visual effect -->
            <div class="absolute inset-0 rounded-lg ring-1 ring-inset ring-black/10"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What are we solving Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          What are we solving?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Transform your development workflow with AI coding agents and seamless infrastructure management
        </p>
      </div>
      
      <div class="grid lg:grid-cols-3 gap-8">
        {solutionPoints.map((point) => (
          <Card 
            title={point.title}
            description={point.description}
            hover={true}
            class={`border-t-4 border-${point.color}-500`}
          >
            <!-- Icon -->
            <div class="text-4xl mb-4">{point.icon}</div>
            
            <!-- Description -->
            <div class="mb-6">
              <p class="text-gray-600">{point.description}</p>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Vibe Coding Playbook Section -->
  <section class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-gray-900 mb-6">
          Our Vibe Coding Playbook
        </h2>
        <p class="text-xl text-gray-600 mb-8">
          A comprehensive guide to building MVP web applications using terminal-based coding tools and structured prompting flows. Learn our proven methodology for vibe coding where you become the Product Owner and Project Manager.
        </p>
        <div class="inline-flex">
          <Button 
            href="/playbook"
            variant="primary"
            size="lg"
          >
            Read the Playbook
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Getting Started Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Vibe Coding Fundamentals
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Master the essential fundamentals for AI-powered development and build a solid foundation for your coding journey
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Learn</h3>
          <p class="text-gray-600">Master fundamentals and AI tools through structured modules</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Practice</h3>
          <p class="text-gray-600">Apply concepts with hands-on projects and real-world scenarios</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Optimize</h3>
          <p class="text-gray-600">Fine-tune your AI-assisted development workflow</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Share</h3>
          <p class="text-gray-600">Contribute to the vibe coding community</p>
        </div>
      </div>
      
      <!-- Final CTA -->
      <div class="text-center">
        <div class="inline-flex flex-col sm:flex-row gap-4">
          <Button 
            href="/fundamentals"
            variant="primary"
            size="lg"
          >
            Learn Fundamentals
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
          <Button 
            href="/playbook"
            variant="secondary"
            size="lg"
          >
            Read Playbook
          </Button>
        </div>
        <p class="mt-4 text-sm text-gray-500">
          Free to learn ‚Ä¢ Community-driven ‚Ä¢ No lock-in
        </p>
      </div>
    </div>
  </section>
</Layout>