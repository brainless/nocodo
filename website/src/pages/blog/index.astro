---
import Layout from '../../layouts/Layout.astro';
import Section from '../../components/theme/Section.astro';
import SectionHeader from '../../components/theme/SectionHeader.astro';
import Card from '../../components/theme/Card.astro';
import { getCollection } from 'astro:content';

const blogEntries = await getCollection('blog');

const blogPosts = blogEntries.map(entry => ({
  title: entry.data.title || 'Untitled',
  description: entry.data.description || '',
  slug: entry.slug,
  tags: entry.data.tags || [],
}));
---

<Layout
  title="nocodo Blog"
  description="Articles, insights, and deep dives into vibe coding, AI-assisted development, and nocodo methodology"
>
  <!-- Blog Posts -->
  <Section background="primary">
    <SectionHeader
      title="Latest Articles"
      subtitle="Deep dives into vibe coding methodology, AI development practices, and real-world case studies"
    />

    <!-- Posts Grid -->
    <div class="grid lg:grid-cols-1 gap-8 max-w-4xl mx-auto">
      {blogPosts.map((post) => (
        <Card class="p-8 border-l-4 border-accent-emerald">
          <!-- Tags -->
          {post.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-4">
              {post.tags.map((tag) => (
                <span class="inline-block px-2.5 py-0.5 rounded-full text-xs font-medium bg-accent-emerald/20 text-accent-emerald border border-accent-emerald/30">
                  {tag}
                </span>
              ))}
            </div>
          )}

          <!-- Icon -->
          <div class="text-4xl mb-4">üìù</div>

          <!-- Title -->
          <h3 class="text-2xl font-bold text-text-primary mb-3">{post.title}</h3>

          <!-- Description -->
          {post.description && (
            <p class="text-text-secondary mb-6">{post.description}</p>
          )}

          <!-- Read Button -->
          <a
            href={`/blog/${post.slug}`}
            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-cyan-500 hover:from-emerald-600 hover:to-cyan-600 text-white font-semibold rounded-lg transition-all duration-200"
          >
            Read Article
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </Card>
      ))}
    </div>

    {blogPosts.length === 0 && (
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-bg-tertiary rounded-full mb-4">
          <svg class="w-6 h-6 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.286a1 1 0 00-.293-.707l-5.657-5.657A1 1 0 0015.343 1H5a2 2 0 00-2 2v16a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-text-primary mb-2">More Articles Coming Soon</h3>
        <p class="text-text-secondary max-w-2xl mx-auto">
          We're working on more in-depth articles covering advanced vibe coding techniques,
          case studies, and implementation guides. Stay tuned!
        </p>
      </div>
    )}
  </Section>

</Layout>