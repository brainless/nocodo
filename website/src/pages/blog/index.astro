---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/UI/Button.astro';
import Card from '../../components/UI/Card.astro';
import { getCollection } from 'astro:content';

const blogEntries = await getCollection('blog');

const blogPosts = blogEntries.map(entry => ({
  title: entry.data.title || 'Untitled',
  description: entry.data.description || '',
  slug: entry.slug,
  tags: entry.data.tags || [],
}));
---

<Layout
  title="nocodo Blog"
  description="Articles, insights, and deep dives into vibe coding, AI-assisted development, and nocodo methodology"
>
  <!-- Blog Posts -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Latest Articles
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Deep dives into vibe coding methodology, AI development practices, and real-world case studies
        </p>
      </div>
      
      <!-- Posts Grid -->
      <div class="grid lg:grid-cols-1 gap-8 max-w-4xl mx-auto">
        {blogPosts.map((post) => (
          <Card 
            title={post.title}
            description={post.description}
            hover={true}
            class="border-l-4 border-blue-500"
          >
            <!-- Tags -->
            {post.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-4">
                {post.tags.map((tag) => (
                  <span class="inline-block px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    {tag}
                  </span>
                ))}
              </div>
            )}
            
            <!-- Icon -->
            <div class="text-4xl mb-4">üìù</div>
            
            <div slot="footer">
              <Button 
                href={`/blog/${post.slug}`}
                variant="primary"
                class="w-full"
              >
                Read Article
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </Button>
            </div>
          </Card>
        ))}
      </div>
      
      {blogPosts.length === 0 && (
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 bg-gray-100 rounded-full mb-4">
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.286a1 1 0 00-.293-.707l-5.657-5.657A1 1 0 0015.343 1H5a2 2 0 00-2 2v16a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">More Articles Coming Soon</h3>
          <p class="text-gray-600 max-w-2xl mx-auto">
            We're working on more in-depth articles covering advanced vibe coding techniques, 
            case studies, and implementation guides. Stay tuned!
          </p>
        </div>
      )}
    </div>
  </section>

</Layout>