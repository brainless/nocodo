---
import { getEntry } from 'astro:content';

// Render the single-page Playbook from content collection
const entry = await getEntry('playbook', 'onepage');
const { Content, data } = await entry.render();
const title = data.title ?? 'nocodo Playbook';

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen text-gray-900">
    <main class="max-w-3xl mx-auto px-4 py-10 prose">
      <h1>{title}</h1>
      <Content />
      <div class="mt-8 text-sm text-gray-600">
        Previous multi-page playbook is available at
        <a href="/playbook-legacy" class="underline hover:no-underline">/playbook-legacy</a>.
      </div>
    </main>
  </body>
</html>
