---
import PolicyLayout from '../layouts/PolicyLayout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('about', 'contact-us');
if (!entry) throw new Error('Contact us content not found');
const { Content } = await entry.render();
---

<PolicyLayout 
  title="Contact Us" 
  description="Contact information for nocodo - Local AI-assisted development environment"
>
  <Content />
</PolicyLayout>