---
import PolicyLayout from '../layouts/PolicyLayout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('about', 'shipping-and-delivery');
if (!entry) throw new Error('Shipping and delivery content not found');
const { Content } = await entry.render();
---

<PolicyLayout 
  title="Shipping and Delivery" 
  description="Shipping and delivery policy for nocodo services"
>
  <Content />
</PolicyLayout>