---
import PolicyLayout from '../layouts/PolicyLayout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('about', 'cancellation-and-refund');
if (!entry) throw new Error('Cancellation and refund content not found');
const { Content } = await entry.render();
---

<PolicyLayout 
  title="Cancellation and Refund" 
  description="Cancellation and refund policy for nocodo services"
>
  <Content />
</PolicyLayout>