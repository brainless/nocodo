// nocodo Desktop Design System
// Centralized sizing and spacing tokens for consistent UI

export global DesktopSizes {
    // Component widths (min/max constraints)
    out property <length> input_min_width: 200px;
    out property <length> input_default_width: 300px;
    out property <length> input_max_width: 600px;

    out property <length> textarea_min_width: 300px;
    out property <length> textarea_default_width: 500px;
    out property <length> textarea_max_width: 800px;

    out property <length> card_min_width: 280px;
    out property <length> card_default_width: 360px;
    out property <length> card_max_width: 480px;

    out property <length> dialog_small_width: 400px;
    out property <length> dialog_medium_width: 600px;
    out property <length> dialog_large_width: 800px;

    out property <length> sidebar_width: 200px;
    out property <length> sidebar_collapsed_width: 60px;

    // Component heights
    out property <length> input_height: 40px;
    out property <length> textarea_min_height: 120px;
    out property <length> button_height: 36px;
    out property <length> button_large_height: 44px;
    out property <length> statusbar_height: 30px;
    out property <length> toolbar_height: 48px;
    out property <length> card_item_height: 80px;

    // Spacing scale (based on 8px grid system)
    out property <length> space_xs: 4px;
    out property <length> space_sm: 8px;
    out property <length> space_md: 16px;
    out property <length> space_lg: 24px;
    out property <length> space_xl: 32px;
    out property <length> space_2xl: 48px;
    out property <length> space_3xl: 64px;

    // Padding presets
    out property <length> padding_input: 12px;
    out property <length> padding_card: 16px;
    out property <length> padding_dialog: 24px;
    out property <length> padding_section: 32px;

    // Border radius
    out property <length> radius_sm: 4px;
    out property <length> radius_md: 8px;
    out property <length> radius_lg: 12px;
    out property <length> radius_xl: 16px;

    // Border widths
    out property <length> border_thin: 1px;
    out property <length> border_medium: 2px;
    out property <length> border_thick: 3px;

    // Content width constraints (for readable content)
    out property <length> content_narrow: 600px;
    out property <length> content_medium: 800px;
    out property <length> content_wide: 1200px;
    out property <length> content_full: 1600px;
}

