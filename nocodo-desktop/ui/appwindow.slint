import { VerticalBox, HorizontalBox } from "std-widgets.slint";
import { DesktopSizes, DesktopTypography, DesktopColors } from "theme.slint";

export struct ApiKeyEntry {
    name: string,
    key: string,
}

component SideBar inherits Rectangle {
    in property <string> current-page;
    callback page-selected(string);

    background: DesktopColors.sidebar_bg;
    width: DesktopSizes.sidebar_width;

    VerticalBox {
        padding: DesktopSizes.space_md;
        spacing: DesktopSizes.space_sm;

        // Settings link
        Rectangle {
            height: DesktopSizes.input_height;
            background: current-page == "settings" ? DesktopColors.sidebar_item_active : transparent;
            border-radius: DesktopSizes.radius_sm;

            HorizontalBox {
                padding: DesktopSizes.space_sm;
                alignment: start;

                Text {
                    text: "Settings";
                    color: DesktopColors.text_on_dark;
                    vertical-alignment: center;
                    font-size: DesktopTypography.font_base;
                }
            }

            TouchArea {
                clicked => {
                    root.page-selected("settings");
                }
            }
        }
    }
}

component StatusBar inherits Rectangle {
    height: DesktopSizes.statusbar_height;
    background: DesktopColors.sidebar_bg;

    HorizontalLayout {
        padding-left: DesktopSizes.space_md;
        padding-right: DesktopSizes.space_md;

        Text {
            text: "Ready";
            color: DesktopColors.text_on_dark;
            vertical-alignment: center;
            font-size: DesktopTypography.font_sm;
        }
    }
}

export component AppWindow inherits Window {
    preferred-width: 1024px;
    preferred-height: 900px;
    min-width: 600px;
    min-height: 830px;
    max-width: 3000px;
    max-height: 2000px;
    title: "NocoDo Desktop";

    property <string> current-page: "settings";
    in-out property <[ApiKeyEntry]> api-keys: [];

    callback load-settings();

    VerticalLayout {
        spacing: 0;

        HorizontalLayout {
            spacing: 0;
            vertical-stretch: 1;
            min-height: 800px;

            // Left sidebar
            sidebar := SideBar {
                current-page: root.current-page;
                page-selected(page) => {
                    root.current-page = page;
                }
            }

            // Main content area
            Rectangle {
                background: DesktopColors.background;
                horizontal-stretch: 1;

                if root.current-page == "settings": VerticalBox {
                    padding: DesktopSizes.space_lg;
                    spacing: DesktopSizes.space_md;

                    Text {
                        text: "Settings";
                        font-size: DesktopTypography.font_2xl;
                        font-weight: DesktopTypography.weight_semibold;
                        color: DesktopColors.text_primary;
                    }

                    Text {
                        text: "API Keys";
                        font-size: DesktopTypography.font_lg;
                        font-weight: DesktopTypography.weight_medium;
                        color: DesktopColors.text_primary;
                    }

                    for entry in api-keys : HorizontalBox {
                        height: DesktopSizes.card_item_height;

                        Rectangle {
                            width: DesktopSizes.input_default_width;
                            height: DesktopSizes.card_item_height;
                            background: DesktopColors.surface;
                            border-radius: DesktopSizes.radius_sm;
                            border-width: DesktopSizes.border_thin;
                            border-color: DesktopColors.border_medium;

                            VerticalBox {
                                padding: DesktopSizes.padding_input;
                                spacing: DesktopSizes.space_sm;

                                Text {
                                    text: entry.name;
                                    font-weight: DesktopTypography.weight_bold;
                                    color: DesktopColors.text_primary;
                                    font-size: DesktopTypography.font_base;
                                }

                                Rectangle {
                                    height: DesktopSizes.input_height - 8px;
                                    background: DesktopColors.background;
                                    border-radius: DesktopSizes.radius_sm;
                                    border-width: DesktopSizes.border_thin;
                                    border-color: DesktopColors.border_medium;

                                    HorizontalBox {
                                        padding: DesktopSizes.space_sm;

                                        Text {
                                            text: entry.key;
                                            color: DesktopColors.text_secondary;
                                            vertical-alignment: center;
                                            font-size: DesktopTypography.font_base;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }

        // Bottom status bar
        StatusBar {}
    }
}
