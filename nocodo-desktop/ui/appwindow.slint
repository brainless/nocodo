import { VerticalBox, HorizontalBox } from "std-widgets.slint";

// Using VerticalLayout and HorizontalLayout for the main structure to avoid margins

export struct ApiKeyEntry {
    name: string,
    key: string,
}

component SideBar inherits Rectangle {
    in property <string> current-page;
    callback page-selected(string);

    background: #2c3e50;
    width: 200px;

    VerticalBox {
        padding: 16px;
        spacing: 8px;

        // Settings link
        Rectangle {
            height: 40px;
            background: current-page == "settings" ? #34495e : transparent;
            border-radius: 4px;

            HorizontalBox {
                padding: 8px;
                alignment: start;

                Text {
                    text: "Settings";
                    color: #ecf0f1;
                    vertical-alignment: center;
                }
            }

            TouchArea {
                clicked => {
                    root.page-selected("settings");
                }
            }
        }
    }
}

component StatusBar inherits Rectangle {
    height: 30px;
    background: #34495e;

    HorizontalLayout {
        padding-left: 16px;
        padding-right: 16px;

        Text {
            text: "Ready";
            color: #ecf0f1;
            vertical-alignment: center;
            font-size: 12px;
        }
    }
}

export component AppWindow inherits Window {
    preferred-width: 1024px;
    preferred-height: 900px;
    min-width: 600px;
    min-height: 830px;
    max-width: 3000px;
    max-height: 2000px;
    title: "NocoDo Desktop";

    property <string> current-page: "settings";
    in-out property <[ApiKeyEntry]> api-keys: [];

    callback load-settings();

    VerticalLayout {
        spacing: 0;

        HorizontalLayout {
            spacing: 0;
            vertical-stretch: 1;
            min-height: 800px;

            // Left sidebar
            sidebar := SideBar {
                current-page: root.current-page;
                page-selected(page) => {
                    root.current-page = page;
                }
            }

            // Main content area
            Rectangle {
                background: #ecf0f1;
                horizontal-stretch: 1;

                if root.current-page == "settings": VerticalBox {
                    padding: 24px;
                    spacing: 16px;

                    Text {
                        text: "Settings";
                        font-size: 24px;
                        color: #2c3e50;
                    }

                    Text {
                        text: "API Keys";
                        font-size: 18px;
                        color: #2c3e50;
                    }

                    for entry in api-keys : HorizontalBox {
                        height: 80px;

                        Rectangle {
                            height: 80px;
                            background: white;
                            border-radius: 4px;
                            border-width: 1px;
                            border-color: #bdc3c7;
                            horizontal-stretch: 1;

                            VerticalBox {
                                padding: 12px;
                                spacing: 8px;

                                Text {
                                    text: entry.name;
                                    font-weight: 700;
                                    color: #2c3e50;
                                    font-size: 14px;
                                }

                                Rectangle {
                                    height: 32px;
                                    background: #ecf0f1;
                                    border-radius: 4px;
                                    border-width: 1px;
                                    border-color: #bdc3c7;

                                    HorizontalBox {
                                        padding: 8px;

                                        Text {
                                            text: entry.key;
                                            color: #34495e;
                                            vertical-alignment: center;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }

        // Bottom status bar
        StatusBar {}
    }
}
